{
  "name": "opencc-action",
  "version": "1.0.0",
  "description": "Running OpenCC on Github Action.",
  "main": "lib/main.js",
  "types": "lib/*.d.ts",
  "files": [
    "lib/*",
    "index.js"
  ],
  "scripts": {
    "clean": "rm -rf dist lib tsconfig.tsbuildinfo",
    "clone-meta": "cp LICENSE README.md action.yml dist",
    "build": "tsc -b && npm run package && npm run clone-meta",
    "package": "ncc build lib/main.js -s -m --license licenses.txt",
    "lint": "eslint ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mogeko/opencc-action.git"
  },
  "keywords": [],
  "author": "Mogeko <zhengjunyi@live.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Mogeko/opencc-action/issues",
    "email": "zhengjunyi@live.com"
  },
  "homepage": "https://github.com/Mogeko/opencc-action",
  "dependencies": {
    "@actions/core": "^1.5.0",
    "opencc": "^1.1.3"
  },
  "devDependencies": {
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vercel/ncc": "^0.31.1",
    "eslint": "^7.32.0",
    "typescript": "^4.4.3"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2017": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {}
  }
}
